<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easyeat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CheckoutActivity"></activity>
        <activity
            android:name=".paiment.CheckoutActivity"
            android:label="@string/title_activity_checkout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".menuactivity.AboutusActivity" />
        <activity android:name=".menuactivity.ProfileActivity" />
        <activity android:name=".login.ResetActivity" />
        <activity android:name=".login.PasswordActivity" />
        <activity android:name=".login.Login" />
        <activity android:name=".splash.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.Register" />
        <activity android:name=".MainActivity" />
        <activity android:name=".slide.IntroActivity" />
    </application>

</manifest>